<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:fromXScale="0"
        android:toXScale="1"
        android:fromYScale="0"
        android:toYScale="1"
        android:pivotX="10%"
        android:pivotY="10%"
        android:duration="9000"
        />



    <rotate
        android:fromDegrees="10"
        android:toDegrees="90"
        android:pivotX="50%"
        android:pivotY="50%"
        />

</set>